  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;">
    <span class="navbar-toggler-icon" ></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav" >
      <li class="nav-item active">
        <a class="nav-link" href="/" style="color: white;">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/precautions"   style="color: white;">Precautions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/faq"  style="color: white;">FAQ</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/about" style="color: white;">About</a>
      </li>
    </ul>
  </div>
</nav>

	<div>

	<h1 class="blinking"><img src="images/home.png" width="60px">"STAY HOME STAY SAFE"</h1>
	<ul class="note">
	<li >*Click on the table header to sort the coulmns accordingly</li>
	<li >*Click on the country to see Total Confirmed Cases date wise</li>
	</ul>
  <form  style="padding-left: 10%;padding-top:10px;">
 <p><h3>Search</h3><input  id="myInput" type="search" placeholder="country" aria-label="Search" onkeyup="myFunction()" style="height: 40px;"></p>
  </form>

						<table class="container searchable sortable" id="myTable">
							<thead>
								<tr class="row100 head">
									<th class="cell100 column1" ><a >Country</a></th>
									<th class="cell100 column2" ><a >Total Cases</a></th>
									<th class="cell100 column3" ><a >New Cases</a></th>
									<th class="cell100 column4" ><a >Total Deaths</a></th>
									<th class="cell100 column5" ><a >New Deaths</a></th>
									<th class="cell100 column6" ><a >Total Recovered</a></th>
									<th class="cell100 column7" ><a >New Recovered</a></th>
								</tr>
							</thead>
							<tbody class="table-content" id="table1">

								    <% for(var i=0;i<items.length;i++) { %>
								    <% if(items[i].TotalConfirmed>0){ %>
								    <tr class="table-row item">
								        <td class="table-data" ><a href="/countries/<%=l[i]%>"><%= items[i].Country %></a></td>
								        <td class="table-data"><%= items[i].TotalConfirmed %></td>
								        <td class="table-data"><%= items[i].NewConfirmed %></td>
								        <td class="table-data"><%= items[i].TotalDeaths %></td>
								        <td class="table-data"><%= items[i].NewDeaths %></td>
								        <td class="table-data"><%= items[i].TotalRecovered %></td>
								        <td class="table-data"><%= items[i].NewRecovered %></td>
								    </tr>
								    <%}}%>
								    <tr style="background-color: black;">
								        <td cell100 column1>Total<!--  = <%= TotalCountries %> --></td>
								        <td cell100 column2><%= TotalConfirmed %></td>
								        <td cell100 column3><%= TotalNewConfirmed %></td>
								        <td cell100 column4><%= TotalDeaths %></td>
								        <td cell100 column5><%= TotalNewDeaths %></td>
								        <td cell100 column6><%= TotalRecovered %></td>
								        <td cell100 column7><%= TotalNewRecovered %></td>       
								    </tr>
							</tbody>
						</table>

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
